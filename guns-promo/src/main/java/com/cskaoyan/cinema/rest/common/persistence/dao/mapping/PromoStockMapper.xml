<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cskaoyan.cinema.rest.common.persistence.dao.PromoStockMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.cskaoyan.cinema.rest.common.persistence.model.PromoStock">
        <id column="uuid" property="uuid" />
        <result column="promo_id" property="promoId" />
        <result column="stock" property="stock" />
    </resultMap>
    <update id="decreaseStock">
        UPDATE mtime_promo_stock
        SET stock = stock - #{amount}
        WHERE
	    stock >= #{amount}
	    AND promo_id = #{promoId}
    </update>

</mapper>
